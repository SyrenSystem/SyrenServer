{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Syren.Server": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Mqtt": {
    "Host": "localhost",
    "Port": 1883,
    "ClientId": "SyrenServer",
    "Username": null,
    "Password": null,
    "UseTls": false,
    "AutoReconnect": true,
    "ReconnectDelaySeconds": 5,

    "UpdateDistanceTopic": "SyrenSystem/SyrenApp/UpdateDistance",
    "UpdateDistancesTopic": "SyrenSystem/SyrenApp/UpdateDistances",
    "ConnectSpeakerTopic": "SyrenSystem/SyrenApp/ConnectSpeaker",
    "DisconnectSpeakerTopic": "SyrenSystem/SyrenApp/DisconnectSpeaker"
  },
  "SnapCast": {
    "ServerHost": "localhost",
    "HttpPort": 1780
  }
}
